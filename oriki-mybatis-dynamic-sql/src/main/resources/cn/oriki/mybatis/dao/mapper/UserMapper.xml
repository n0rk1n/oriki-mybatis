<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.oriki.mybatis.dao.mapper.UserMapper">
    <select id="queryUserByUsernameOrEmail" resultType="cn.oriki.mybatis.domain.User">
        select
        id ,
        username ,
        password ,
        email ,
        info ,
        img ,
        create_time
        from t_user where 1=1
        <if test="username !=null and username != '' ">
            and username like concat("%",#{username},"%")
        </if>
        <if test="email != null and email != '' ">
            and email = #{email}
        </if>
        ;
    </select>

    <update id="updateByIdSelective">
        UPDATE `t_user`
        <set>
            <if test="username != null and username != '' ">
                `username` = #{username} ,
            </if>
            <if test="password != null and password != '' ">
                `password` = #{password} ,
            </if>
            <if test="email != null and email != '' ">
                `email` = #{email} ,
            </if>
            <if test="info != null and info != '' ">
                `info` = #{info} ,
            </if>
            <if test="img != null and img != '' ">`
                img` = #{img} ,
            </if>
        </set>
        where
        `id` = #{id};
    </update>

    <select id="queryByIdOrUsername" resultType="cn.oriki.mybatis.domain.User">
        select id , username , password , email , info , img , create_time
        from t_user
        <where>
            <choose>
                <when test="id != null and id != ''">
                    and id = #{id}
                </when>
                <when test="username != null and username != ''">
                    and username = #{username}
                </when>
                <otherwise>
                    1 = 2
                </otherwise>
            </choose>
        </where>
        ;
    </select>

    <select id="queryByUsernameOrEmail" resultType="cn.oriki.mybatis.domain.User">
        select
        id ,
        username ,
        password ,
        email ,
        info ,
        img ,
        create_time
        from t_user
        <where>
            <if test="username !=null and username != '' ">
                and username like concat("%",#{username},"%")
            </if>
            <if test="email != null and email != '' ">
                and email = #{email}
            </if>
        </where>
    </select>

</mapper>
